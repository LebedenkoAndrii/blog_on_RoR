<div class="container py-3 rounded ">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors"%>
            
            <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-dark-subtle rounded d-flex flex-column gap-3" ,local: true) do |f| %>
            <div class="form-group row">
                <%= f.label :title, class: "col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.text_field :title, class: "form-control shadow-sm rounded", placeholder: "Title of article" %>
                </div>
            </div>

            <div class="form-group row">
                <%= f.label :description, class: "col-2 col-form-label" %>
                <div class="col-10">
                    <%= f.text_area :description, rows: 10, class: "form-control shadow-sm rounded", placeholder: "Description of article" %>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <%= f.submit class: "btn btn-success btn-lg col-2" %>
            </div>
            <% end %>
        </div>
        <%= link_to '[ Cancel and return to all articles ]', articles_path, class: "text-center mb-5" %>
    </div>
</div>